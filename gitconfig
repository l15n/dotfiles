[user]
	name = Leonard Chin
	email = l.g.chin@gmail.com
[core]
	;Use a global .gitignore
	excludesFile = ~/.gitignore
[color]
	ui = auto
[diff]
	mnemonicprefix
	renames = copies
	tool = Kaleidoscope
[alias]
	st = status -sb
	ci = commit -v
	cm = commit -m
	co = checkout
	staged = diff --cached
	unstaged = diff
	both = diff HEAD
	oneline = log --pretty=oneline --abbrev-commit --decorate
	amend = commit --amend
	track = branch --track
[merge]
	tool = vimdiff
[format]
	numbered = auto
[branch]
	autosetupmerge = true
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
